---
import Rating from "@components/Rating/index.astro"
const { book: { title, author, rating, image } } = Astro.props
---

<article class="flex flex-col max-w-[480px] px-4 py-4 rounded-lg">
    <div class="flex gap-6">
        <img class="w-[80px]" src={image} alt=`Cover of ${title} by ${author}`>
        <aside class="flex flex-col gap-1">
            <h3 class="text-lg font-semibold leading-5">{title}</h3>
            <p class="text-sm opacity-60 leading-4">{author}</p>
            {rating && <Rating rating={rating} />}
        </aside>
    </div>
</article>